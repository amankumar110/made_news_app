<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.main.EarnStoryDialogFragment">

    <androidx.cardview.widget.CardView
        app:cardBackgroundColor="@color/app_color_background"
        android:layout_gravity="center"
        app:cardElevation="5dp"
        app:cardCornerRadius="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/spacing_l">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:paddingHorizontal="@dimen/spacing_m"
            android:paddingTop="@dimen/spacing_l"
            android:paddingBottom="@dimen/spacing_m"
            android:layout_height="wrap_content">

            <TextView
                android:text="@string/free_story_generation_default_message"
                android:id="@+id/tv_earn_story_title"
                style="@style/AppHeadingStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/iv_app_logo"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="@dimen/spacing_s"
                android:src="@drawable/app_logo"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_earn_story_title" />

            <TextView
                android:layout_marginStart="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/iv_app_logo"
                app:layout_constraintTop_toTopOf="@id/iv_app_logo"
                app:layout_constraintBottom_toBottomOf="@id/iv_app_logo"
                android:text="We Support the Hard Work"/>

            <TextView
                android:id="@+id/tv_free_story_generation_description"
                android:layout_marginTop="@dimen/spacing_m"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/free_story_generation_description"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv_app_logo" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_watch_ad"
                style="@style/AppButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/spacing_m"
                android:layout_marginTop="@dimen/spacing_l"
                android:text="Watch an Ad"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_free_story_generation_description" />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

</FrameLayout>