<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:id="@+id/editText_container"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:paddingHorizontal="@dimen/icon_edit_text_padding"
        android:background="@drawable/icon_edit_text_view_background"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_icon"
            app:tint="@color/app_color_outline"
            android:layout_width="@dimen/icon_edit_text_icon_size"
            android:layout_height="@dimen/icon_edit_text_icon_size"
            android:src="@drawable/ic_email"/>

        <View
            android:id="@+id/v_divider"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="@dimen/icon_edit_text_item_spacing"
            android:background="@color/app_color_outline"/>

        <EditText
            android:paddingVertical="@dimen/icon_edit_text_padding"
            android:id="@+id/et_info"
            android:textSize="@dimen/icon_edit_text_size"
            style="@style/AppEditTextViewStyle"
            android:autofillHints="emailAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter your text here"
            android:inputType="textEmailAddress" />

    </LinearLayout>

    <TextView
        android:visibility="gone"
        android:textColor="@color/app_color_error"
        android:id="@+id/tv_error"
        android:layout_marginStart="@dimen/icon_edit_text_item_spacing"
        android:textSize="@dimen/icon_edit_text_error_text_size"
        android:layout_marginTop="@dimen/icon_edit_text_item_spacing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Error"/>

</LinearLayout>