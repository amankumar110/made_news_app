<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/emailVerificationContainer"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="@color/app_color_background"
        app:cardElevation="10dp"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/spacing_l">

    <LinearLayout
        android:padding="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            style="@style/AppTextViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:fontFamily="@font/rubik_bold"
            android:text="Email Verification Link Sent"/>

        <TextView
            android:id="@+id/tv_description"
            android:layout_marginTop="@dimen/spacing_m"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/email_verification_rationale"
            android:textSize="12sp"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btn_verify"
            style="@style/AppButtonStyle"
            android:text="Verify Now!"
            android:layout_marginTop="@dimen/spacing_m"
            android:background="@drawable/button_background"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_retry"
            android:layout_marginTop="@dimen/spacing_m"
            android:background="@drawable/button_background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Verify Me Again"
            style="@style/AppButtonStyle"/>


    </LinearLayout>

    </androidx.cardview.widget.CardView>

</FrameLayout>