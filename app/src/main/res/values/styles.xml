<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTextViewStyle" parent="Widget.AppCompat.TextView">
        <item name="android:includeFontPadding">false</item>
        <item name="android:fontFamily">@font/rubik</item>
    </style>

    <style name="AppEditTextViewStyle" parent="Widget.AppCompat.EditText">
        <item name="android:includeFontPadding">false</item>
        <item name="fontFamily">@font/rubik</item>
        <item name="android:textColor">?android:attr/textColor</item>
        <item name="android:background">@null</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColorHint">@color/app_color_hint</item>
    </style>


    <style name="RoundImageButton" parent="Widget.AppCompat.ImageButton">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="AppButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:textColor">#000</item>
        <item name="fontFamily">@font/rubik_medium</item>
        <item name="android:textSize">@dimen/text_s</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:background">@drawable/button_background</item>
    </style>


    <style name="AppHeadingStyle" parent="AppTextViewStyle">
        <item name="fontFamily">@font/rubik_bold</item>
        <item name="android:textSize">@dimen/text_xl</item>
    </style>


</resources>